{
  "name": "WriteStack-dev",
  "version": "1.3",
  "description": "Helps users manage and schedule their Substack posts.",
  "manifest_version": 3,
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "128": "128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16.png",
      "32": "32.png",
      "128": "128.png"
    }
  },
  "content_scripts": [
    {
      "js": ["assets/contentScript.js"],
      "matches": ["https://*.substack.com/*"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "permissions": ["cookies", "storage", "alarms"],
  "host_permissions": [
    "https://*.substack.com/*",
    "https://*.writeroom.co/*",
    "https://*.writestack.io/*",
    "http://localhost:3000/*",
    "https://writeroom-app-dev.s3.us-east-1.amazonaws.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://*.writeroom.co/*",
      "http://localhost:3000/*",
      "https://*.writestack.io/*",
      "https://*.substack.com/*"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "styles/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
